Host *
    Compression yes
    ControlMaster auto
    ControlPath ~/.ssh/%r@%h:%p
    ControlPersist 24H
    ForwardAgent no
    ForwardX11 no
    ForwardX11Trusted no
    HashKnownHosts yes
    ServerAliveCountMax 30
    ServerAliveInterval 60
    TCPKeepAlive yes

Include hosts

# vim: filetype=sshconfig
