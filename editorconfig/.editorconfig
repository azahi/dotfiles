root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cc,cpp,cxx,c++,h,hpp,hxx,h++}]
indent_style = tab

[Makefile]
indent_style = tab

[*.{ac,am,m4,in)]
indent_style = tab

[*.cs]
charset = utf-8-bom
end_of_line = crlf

[*.ebuild]
indent_style = tab
