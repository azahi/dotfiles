root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.S]
indent_style = tab

[*.{c,cc,cpp,cxx,c++,h,hh,hpp,hxx,h++,mm}]
indent_style = tab

[Makefile,*.mk]
indent_style = tab

[CMakeList.txt]
indent_size = 8
indent_style = space

[*.{ac,am,m4)]
indent_style = tab

[*.{cs,fs}]
charset = utf-8-bom
end_of_line = crlf
indent_style = space

[*.{hs,lhs}]
indent_size = 2
indent_style = space

[*.el]
indent_size = 2
indent_style = space

[*.ebuild]
indent_style = tab

[*.git*]
indent_style = tab
