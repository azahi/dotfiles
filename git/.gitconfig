[user]
	name = Azat Bahawi
	email = azahi@teknik.io
	signingkey = B40FCB6608BBE3B6
[core]
	excludesfile = ~/.gitignore
	whitespace = trailing-space
[commit]
	gpgsign = true
[diff]
	mnemonicprefix = true
	renames = copies
	submodule = log
[branch]
	autosetupmerge = true
[merge]
	conflictstyle = diff3
	stat = true
[rebase]
	autosquash = true
[fetch]
	prune = true
[push]
	default = current
[pull]
	ff = only
	rebase = false
[status]
	submodulesummary = true
[rerere]
	enabled = true
[advice]
	detachedhead = false
	pushnonfastforwards = false
	statushints = false
[github]
	user = azahi
[alias]
	ad = add
	ada = add --all
	al = config --get-regexp alias
	br = branch --all
	ch = checkout
	cho = checkout --orphan
	ci = commit
	cia = commit --amend
	cias = commit --amend --signoff
	cl = clone
	clr = clone --recurse-submodules
	cls = clone --depth=1
	di = diff
	dis = !"git diff-index --quiet HEAD -- || clear ; git diff --patch-with-stat"
	e = "!exec"
	fe = fetch
	fer = fetch --all --recurse-submodules
	gud = commit --message=\"git gud\"
	lo = log --all --decorate --abbrev-commit --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	los = log --all --decorate --abbrev-commit --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --stat
	ls = ls-files
	pl = pull
	plr = pull --all --recurse-submodules
	ps = push
	psf = push --force
	re = reset HEAD
	ree = reset HEAD^
	setup = !"git init && git commit --allow-empty -m Initial"
	st = status --short
	ui = update-index --assume-unchanged
	uiu = update-index --un-assume-unchanged
	wc = whatchanged -p --abbrev-commit --pretty=medium
	wtc = !"curl -s whatthecommit.com/index.txt | git commit --file -"
