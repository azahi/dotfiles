[user]
    name            = azahi
    email           = azahi@teknik.io

[credential]
    helper          = cache

[color]
    branch          = auto
    diff            = auto
    interactive     = auto
    status          = auto
    ui              = true

[core]
    excludesfile    = ~/.gitignore_global
    quotepath       = false
    commitgraph     = true
    untrackedcache  = true

[commit]
    verbose         = false

[branch]
    autosetupmerge  = always
    autosetuprebase = always

[branch "master"]
    rebase          = true

[merge]
    ff              = only
    log             = true

[mergetool]
    prompt          = false
    keepbackup      = false

[diff]
    submodule       = log
    renames         = copies

[difftool]
    prompt          = false
    trustexitcode   = true

[diff "bin"]
    textconv        = hexdump -v -C

[log]
    decorate        = short
    date            = local

[status]
    color           = true

[apply]
    whitespace      = fix

[push]
    default         = simple
    followTags      = true

[pull]
    rebase          = true

[fetch]
    prune           = true

[rebase]
    autosquash      = true
    autstash        = true

[help]
    autocorrect     = 1

[alias]
    clone           = clone --recursive
    conflicts       = diff --name-only --diff-filter=U
    contributors    = --no-pager shortlog --numbered --summary
    ec              = diff HEAD^ --name-only --diff-filter=ACMR
    ed              = diff HEAD --name-only --diff-filter=ACMR
    et              = conflicts
    fetch           = fetch --all
    gud             = commit --message=\"git gud\"
    ignore          = update-index --assume-unchanged
    lg              = log --all --decorate --abbrev-commit --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    lgs             = log --all --decorate --abbrev-commit --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --stat
    pull            = pull --all
    recommit        = commit --amend
    wtc             = !git commit -m \"$(curl -s whatthecommit.com/index.txt)\"
    spull           = submodule foreach git pull
    ss              = !git status --porcelain | awk '{print $2}'
    st              = diff --staged --name-only --diff-filter=ACMR
    uncommit        = reset --soft HEAD^
    unignore        = update-index --un-assume-unchanged
    unpush          = push --force-with-lease origin HEAD^:master
    unstage         = reset HEAD
    wc              = whatchanged -p --abbrev-commit --pretty=medium

[github]
    user            = azahi

[url "git@github.com:"]
    pushInsteadOf   = "github:"
    pushInsteadOf   = "git://github.com/"

[url "git@gitlab.com:"]
    pushInsteadOf   = "gitlab:"
    pushInsteadOf   = "git://gitlab.com/"

[url "git@bitbucket.org:"]
    pushInsteadOf   = "bitbucket:"
    pushInsteadOf   = "git://bitbucket.org/"
