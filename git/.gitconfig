[user]
	name            = azahi
	email           = azahi@teknik.io
[credential]
	helper          = cache
[color]
	branch          = auto
	diff            = auto
	interactive     = auto
	status          = auto
[core]
	excludesfile    = ~/.gitignore_global
    quotepath       = false
[branch]
    autoSetupMerge  = always
    autoSetupRebase = always
[merge]
    ff              = only
    log             = true
	tool            = /usr/bin/colordiff
[mergetool]
	prompt          = false
	keepBackup      = false
[diff]
	submodule       = log
	tool            = /usr/bin/colordiff
[difftool]
	prompt          = false
[push]
	default         = current
[pull]
	rebase          = true
[fetch]
	prune           = true
[submodule]
	fetchJobs       = 4
[alias]
    clone           = clone --recursive
    fetch           = fetch --all
    pull            = pull --all
    spull           = submodule foreach git pull
    l               = log --all --decorate --abbrev-commit --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    ls              = log --all --decorate --abbrev-commit --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --stat
    ignore          = update-index --assume-unchanged
    unignore        = update-index --un-assume-unchanged
    unpush          = push --force-with-lease origin HEAD^:master
    unstage         = reset HEAD
    uncommit        = reset --soft HEAD^
    recommit        = commit --amend
    wc              = whatchanged -p --abbrev-commit --pretty=medium
    gud             = commit --message=\"git gud\"
	rng             = !git commit -m \"$(curl -s whatthecommit.com/index.txt)\"
[github]
	user = azahi
